# Festwrap Server Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Setlist.fm API Key (get it from https://api.setlist.fm/docs/1.0/index.html)
FESTWRAP_SETLISTFM_APIKEY=your_setlistfm_api_key_here

# Required: Spotify API credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REFRESH_TOKEN=your_spotify_refresh_token_here

# Optional: Server configuration (defaults provided)
FESTWRAP_PORT=8080
FESTWRAP_MAX_CONNS_PER_HOST=10
FESTWRAP_SETLISTFM_NUM_SEARCH_PAGES=3
FESTWRAP_MAX_UPDATE_ARTISTS=5
FESTWRAP_ADD_SETLIST_SLEEP_MS=550
FESTWRAP_HTTP_CLIENT_TIMEOUT_S=5 